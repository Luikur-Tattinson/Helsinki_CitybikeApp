<div id="addStationModal" class="modal">
    <div class="modal-content">
        <span class="close">&times;</span>
        <h2>Add a New Station</h2>
        <form id="addStationForm" asp-controller="Home" asp-action="AddStation" method="POST">
            <div class="form-group">
                <label for="nameInput">Name: *</label>
                <input type="text" id="nameInput" name="Nimi" required>
            </div>
            <div class="form-group">
                <label for="namnInput">Name (Swedish):</label>
                <input type="text" id="namnInput" name="Namn">
            </div>
            <div class="form-group">
                <label for="addressInput">Address: *</label>
                <input type="text" id="addressInput" name="Osoite" required>
            </div>
            <div class="form-group">
                <label for="cityInput">City: </label>
                <input type="text" id="cityInput" name="Kaupunki">
            </div>
            <div class="form-group">
                <label for="operatorInput">Operator: </label>
                <input type="text" id="operatorInput" name="Operaattor">
            </div>
            <div class="form-group">
                <label for="capacityInput">Capacity: </label>
                <input type="number" id="capacityInput" name="Kapasiteet">
            </div>
            <div class="form-group">
                <input type="hidden" id="lngInput" name="X">
                <input type="hidden" id="latInput" name="Y">
            </div>
            <div class="form-group">
                <button type="submit">Submit</button>
            </div>
        </form>
    </div>
</div>
